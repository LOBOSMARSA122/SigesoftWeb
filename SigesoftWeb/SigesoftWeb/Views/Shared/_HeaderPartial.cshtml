@{
    var base64 = @ViewBag.USER.PersonImage == null ? "" : Convert.ToBase64String(@ViewBag.USER.PersonImage);
    var imgSrc = base64 != "" ? String.Format("data:image/jpeg;base64,{0}", base64) : "/Content/static/images/foto@default.png";
}
<style>
    .dropdown-menu {
        top: 30px !important;
    }
</style>
<header class="fixed-top">
    <div class="row align-items-center menu">
        <div class="col-auto align-self-stretch boton-menu ">
            <a href="#" class="bt-menu"><span class="icon-menu icono-menu"></span></a>
        </div>

        <div class="col logo">
            <a href="@Url.Content("~/SigesoftWeb")">
                <span>Sigesoft</span>
            </a>
        </div>
        <div class="d-none d-md-block">
            <nav class="col ">
                <a href="#" class="imagen">  <img src="@imgSrc" width="35" height="35" /></a>
                <a href="#" class="nombre-usuario dropdown-toggle" data-toggle="dropdown">Bienvenido: @ViewBag.USER.FullName</a>
                <ul class="dropdown-menu">
                    <li class="user-header ">
                        <div class="text-center">
                            <a href="@Url.Content("~/salir")" class="btn btn-danger">Cerrar Sesión</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>